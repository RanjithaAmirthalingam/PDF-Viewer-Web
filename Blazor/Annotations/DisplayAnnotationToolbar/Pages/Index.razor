@page "/"

@using Syncfusion.Blazor.PdfViewerServer
@using Syncfusion.Blazor.PdfViewer
@using Syncfusion.Blazor.Buttons

<style>
    .e-control e-textbox e-lib e-input {
        color: red;
    }
</style>

<SfPdfViewerServer @ref="viewer" IsCommentPanelOpen="true" Width="1000" Height="700" DocumentPath="@documentPath">
    <PdfViewerEvents DocumentLoaded="DocumentLoad"></PdfViewerEvents>
</SfPdfViewerServer>

@code{

    private string documentPath { get; set; } = "wwwroot/Data/PDF_Succinctly.pdf";    

    SfPdfViewerServer viewer;

    public void DocumentLoad(LoadEventArgs args)
    {
        viewer.ShowAnnotationToolbar(true);

        viewer.HighlightSettings.Author = "username";

    }

}